{
  "name": "christy-laguardia-portfolio",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "node-sass-chokidar": "0.0.3",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-router-dom": "^4.2.2",
    "react-scripts": "1.1.1",
    "react-typist": "^2.0.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build-css": "node-sass-chokidar src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
    "build": "npm run build-css && react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "copy": "rm -rf ./public && cp -R ./build ./public",
    "copy-apiai": "rm -rf ./vendor/api-ai-javascript && cp -R node_modules/api-ai-javascript src/vendor/api-ai-javascript",
    "deploy": "npm run copy-apiai && npm run build && npm run copy && firebase deploy"
  },
  "devDependencies": {
    "api-ai-javascript": "^2.0.0-beta.21",
    "bulma": "^0.6.2",
    "font-awesome": "^4.7.0"
  }
}
